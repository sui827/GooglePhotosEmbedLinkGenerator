<%-include('components/header')%>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark text-white">
  <a class="navbar-brand" href="/"><%=title%></a>
</nav>

<main class="container-lg">
  <%-include('components/form')%>
  <div class="row mx-0">
    <%for(let link of links){%>
      <div class="photo-card col-6 col-md-4 col-lg-3 px-0">
        <div class="img-box">
           <img src="<%=link%>=w240">
        </div>
        <div class="form-row">
          <div class="col pr-0">
            <input type="text" class="form-control copy-val" value="<%=link%>">
          </div>
          <div class="col-auto pl-0">
            <button class="btn btn-outline-dark copy-btn">Copy!</button>
          </div>
        </div>
      </div>
    <%}%>
  </div>
</main>

<style>
  .photo-card {
    border: 1px solid #ccc;
    border-radius: 3px;
  }
  .img-box {
    position: relative;
  }
  .img-box::before {
    content: "";
    display: block;
    padding-top: 100%;
  }
  .img-box img {
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    object-fit: contain;
    box-sizing: border-box;
  }
</style>

<%-include('components/footer')%>